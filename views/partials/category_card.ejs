<article class="card">
  <div class="card-header">
    <div class="card-name">
      <a href="/categories/view/<%= locals.category.id %>">
        <h2>
          <%= locals.category.name %>
        </h2>
      </a>
    </div>
    <div class="card-buttons">
      <a href="/categories/view/<%= locals.category.id %>" class="view button">
        View
      </a>
      <a href="/categories/edit/<%= locals.category.id %>" class="edit button">
        Edit
      </a>
    </div>
  </div>
  <div class="card-body">
    <div class="card-field">
      <span class="field-name">Description</span>
      <span class="field-value"><%= locals.category.description %></span>
    </div>
  </div>
</article>